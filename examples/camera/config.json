{
    "layers": [
        {
            "name": "V1",
            "threshold": 255,
            "relaxation": 0,
            "width": 160,
            "height": 120,
            "connect": [
                {
                    "name": "V2",
                    "radius": 1
                }
            ]
        },
        {
            "name": "V2",
            "relaxation": 10,
            "width": 160,
            "height": 120
        }
    ],
    "domains": [
        {
            "name"        : "Eye",
            "device": {
                "type": "GrayVideo",
                "window": "IN",
                "width": 160,
                "height": 120,
                "output"    : [
                    {"name": "VIN" }
                ]
            }
        },
        {
            "name"        : "D1",
            "device": {
                "type": "OpenCL",
                "platform": 0
            },
            "layers"    : [
                {"name": "V1", "input": "VIN"}
            ]
        },
        {
            "name"        : "D2",
            "device": {
                "type": "OpenCL",
                "platform": 0
            },
            "layers"    : [
                {"name": "V2", "output": "VOUT"}
            ]
        },
        {
            "name"        : "Dumper",
            "device": {
                "type": "GrayVideoOut",
                "window": "Dump",
                "width": 160,
                "height": 120,
                "input"    : [
                    {"name": "VOUT"}
                ]
            }
        }
    ]
}

